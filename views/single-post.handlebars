<article class="post">
  <div class="title">
    <a href="{{post.post.url}}" target="_blank">{{post.title}}</a>
    <span>({{post.post_url}})</span>
  </div>
  <div class="meta">
    {{post.vote_count}} point(s) by {{post.username}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.Comments.length}} comment(s)</a>
  </div>
</article>

{{> comments post.Comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}